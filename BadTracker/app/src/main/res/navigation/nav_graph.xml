<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">
    <fragment
        android:id="@+id/mainFragment"
        android:name="fr.efrei.badtracker.fragments.main.MainFragment"
        android:label="BadTracker"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_matchTypeDialog"
            app:destination="@id/matchTypeDialog" />
        <action
            android:id="@+id/action_mainFragment_to_matchFragment"
            app:destination="@id/matchFragment" />
        <action
            android:id="@+id/action_mainFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>
    <dialog
        android:id="@+id/matchTypeDialog"
        android:name="fr.efrei.badtracker.dialogs.MatchTypeDialog"
        android:label="MatchTypeDialog" >
        <action
            android:id="@+id/action_matchTypeDialog_to_createMatchFragment"
            app:destination="@id/createMatchFragment" />
    </dialog>
    <fragment
        android:id="@+id/createMatchFragment"
        android:name="fr.efrei.badtracker.fragments.create_match.CreateMatchFragment"
        android:label="Create a match"
        tools:layout="@layout/fragment_create_match" >
        <argument
            android:name="matchType"
            app:argType="string" />
        <action
            android:id="@+id/action_createMatchFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/matchFragment"
        android:name="fr.efrei.badtracker.fragments.match.MatchFragment"
        android:label="Match"
        tools:layout="@layout/fragment_match" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="fr.efrei.badtracker.fragments.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />
</navigation>